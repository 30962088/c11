<?xml version="1.0" encoding="utf-8"?>
<cn.cntv.cctv11.android.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView 
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/day_color_selector"
            android:textSize="15sp"
            />
        
        <TextView 
            android:id="@+id/popup"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="8sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/bg_day_popup"/>
        
        <View 
            android:id="@+id/selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_day_selected"/>
        
    </RelativeLayout>
    
</cn.cntv.cctv11.android.widget.SquareFrameLayout>